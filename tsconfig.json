{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "./src",
    "paths": {
      "@homework-task/*": ["*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6"
  },
  "include": [
    "src/components/Button.tsx",
    "src/components/Cards.tsx",
    "src/components/Hero.tsx",
    "src/components/ItemsShowcase.tsx",
    "src/components/Layout.tsx",
    "src/components/PanelShowcase.tsx",
    "src/components/TrustBar.tsx",
    "src/components/newComponents/UserList.tsx",
    "src/components/newComponents/UserForm.tsx",
    "src/components/newComponents/FormGenerator.tsx",
    "src/components/newComponents/PageGenerator.tsx",
    "src/assets/constants/types.ts"
  ],
  "exclude": ["node_modules"]
}
